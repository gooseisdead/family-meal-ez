<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<p style = "color:red;"><%= error %></p>
    <% end %>
<% end  %>

<%= form_for @ingredient do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :quantity %>
<%= f.number_field :quantity %>
<br>
<%= f.label :quality %>
<%= f.collection_select :quality %>

<%= f.submit %>
<% end %>