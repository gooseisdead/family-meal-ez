<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<p style = "color:red;"><%= error %></p>
    <% end %>
<% end  %>

<%= form_for @ingredient do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :quantity %>
<%= f.number_field :quantity %>
<br>
<%= f.label :quality %>
<%= f.select :quality, options_for_select([["Select One", ""], "fresh", "day-old", "expiring", "use today"]) %>

<%= f.submit %>
<% end %>