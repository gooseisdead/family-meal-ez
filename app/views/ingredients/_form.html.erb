<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<p style = "color:red;"><%= error %></p>
    <% end %>
<% end  %>
<h2><%= @ingredient.name %></h2>
<% if @ingredient.category == "fruits" %>
<%= image_tag ("/assets/fruits.png"), class: "img-responsive" %>
<% elsif @ingredient.category == "vegetables"%>
<%= image_tag ("/assets/vegetables.png"), class: "img-responsive" %>
<% else @ingredient.category == nil %>
<%= image_tag ("/assets/qmark.png"), class: "img-responsive" %>
<% end %>
<br>
<%= form_for @ingredient do |f| %>

<%= f.label :quantity %>
<%= f.number_field :quantity %>
<br>
<%= f.label :quality %>
<%= f.select :quality, options_for_select([["Select One", ""], "fresh", "day-old", "expiring", "use today"]) %>
<br>

<%= f.submit %>
<% end %>