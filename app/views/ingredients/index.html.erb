


<%= image_tag ("/assets/ingredients.png"), class: "img-responsive", size: "170x170"%>
<h1>Ingredient Inventory</h2>

<% if flash[:success] %>
 <h2 style = "color:green;"><%= flash[:success] %></h2> 
<% end %>

<% if flash[:errors] %>
