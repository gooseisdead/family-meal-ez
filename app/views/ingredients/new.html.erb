<%= image_tag ("/assets/ingredients.png"), class: "img-responsive" %>
<h1>Add New Ingredient</h1>
<%= form_for @ingredient do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :category %>
<%= f.select :category, options_for_select([["Select One", ""], "fruit", "vegetable", "canned goods", "dairy", "meats", "baking", "leftovers", "spices"]) %>
<%= render 'form' %>

<% end %>