<h3>Breakfast Family Meal:</h3>
<ul>
<% @family_meals.each do |family_meal| %>
    <% if family_meal.shift == "breakfast" && family_meal.employee.job_title == 'cook'%>
        <li><b><%= family_meal.recipe.name %></b>.&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Cook Responsable: <b><%= family_meal.employee.name %></b></li>
        <% end %>
    <% end %>
</ul>
