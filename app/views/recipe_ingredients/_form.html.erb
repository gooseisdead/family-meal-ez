<%= form_for @recipe_ingredient do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :description %>
<%= f.text_area :description, size: "60x12" %>
<br><br><br>
    <% ingredients = Ingredient.all %>
    <% ingredients.each do |ingredient| %>
    <%= f.check_box @recipe.ingredients, { multiple: true }, ingredient, false %>
    <%= f.label ingredient.name %></li>
    <% end %><br>
    <%= f.submit %>
<% end %>