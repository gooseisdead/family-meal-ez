<h1>Create New Employee</h1>

 <% if flash[:errors] %>
     <% flash[:errors].each do |error|  %> 
         <%= error %> 
     <% end %> 
 <% end %>  

<h2><%= form_for @employee do |f| %>
    
    <%=f.label :name %>
    <%=f.text_field :name %>
    <br>
    <%=f.label :password %>
    <%=f.password_field :password %>
    <br>
    <%=f.label :shift %>
    <%=f.select :shift, options_for_select([["Select One", ""], "Breakfast", "Lunch", "Dinner"]) %>
    <br>
    <%=f.label :job_title %>
    <%=f.select :job_title, options_for_select([["Select One", ""], "Cook", "Busser", "Runner", "Server", "Bartender", "Chef"]) %>
    <br>
    <%=f.submit %></h2>
<% end %>